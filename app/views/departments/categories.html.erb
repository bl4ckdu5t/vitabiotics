<section class="row-two">
	<h2>Staffs</h2>
	<% @staffs.map do |staff| %>
	<div class="topmag10">
		<img src="<%= staff.avatar %>" alt="<%= staff.surname %>" class="thumbnail">
		<h3><%= link_to "#{staff.surname} #{staff.othernames.split(' ')[0]}", staff_path(staff.id) %></a></h3>
		<span><%= staff.designation %></span>
	</div>
	<% end %>
</section>