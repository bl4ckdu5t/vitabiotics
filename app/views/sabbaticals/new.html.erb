<div class="middle-block" style="width:80%"><%= content_tag :p, notice, class: 'notifier' %></div>
<section class="staffData">
	<div class="topbar">
		Add a Leave record
	</div>
	<div class="entry">
		<%= form_for @sabbatical do |f| %>
			<p class="formline">
				<%= f.label :staff_id, 'Staff' %>
				<%= f.select :staff_id, options_for_select([['Select staff', 0, disabled: 'true']] + @staffs, 0) %>
			</p>
			<p class="formline clearfix"><%= f.label :registration_no, 'Registration no' %><%= f.text_field :registration_no %></p>
			<p class="formline clearfix">
				<%= f.label :category %>
				<%= f.select :category, options_for_select(@types) %>
			</p>
			<p class="formline clearfix"><%= f.label :duration %><%= f.text_field :duration %></p>
			<p class="formline clearfix"><%= f.label :commence_date, 'Commence Date' %><%= f.date_field :commence_date %></p>
			<p class="formline clearfix"><%= f.label :resume_date, 'Resume Date' %><%= f.date_field :resume_date %></p>
			<p class="formline"><%= f.label :encashment %><%= f.text_field :encashment %></p>
			<p class="formline"><%= f.label :reason, 'Reason' %><%= f.text_area :reason, size: '19x3' %></p>
			<p class="formline">&nbsp;</p>
			<p class="formline"><button class="btn-std">Create Sabbatical Record</button></p>
		<% end %>
	</div>
</section>