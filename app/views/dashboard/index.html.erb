<section class="row-doubles">
	<div>
		<div>
			<div class="title">Recent Activities</div>
			<div class="content pad10">
				<ul class="clean-list">
					<% @activities.map do |activity| %>
					<li><%= "#{activity.activity}".capitalize %> <em class="fr"><%= activity.created_at.strftime('%D') %></em></li>
					<% end %>
				</ul>
				<% if @activities.first == nil %>
				<p>No Recent Activities</p>
				<% else %>
				<%= link_to '<div class="read-more">Read more</div>'.html_safe, activities_path %>
				<% end %>
			</div>
		</div>
		<div class="topmag10 background-cool-blue pad20">
			<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="40" height="40" viewBox="0 0 32 32" class="background-cool-blue">
			<g id="icomoon-ignore"></g>
			<path d="M28 4h-3v1c0 1.103-0.897 2-2 2s-2-0.897-2-2v-1h-10v1c0 1.103-0.897 2-2 2s-2-0.897-2-2v-1h-3c-1.1 0-2 0.9-2 2v22c0 1.1 0.9 2 2 2h24c1.1 0 2-0.9 2-2v-22c0-1.1-0.9-2-2-2zM28 27.996c-0.001 0.001-0.002 0.003-0.004 0.004h-23.993c-0.001-0.001-0.003-0.002-0.004-0.004v-17.996h24v17.996zM9 6c0.552 0 1-0.448 1-1v-4c0-0.552-0.448-1-1-1s-1 0.448-1 1v4c0 0.552 0.448 1 1 1zM23 6c0.552 0 1-0.448 1-1v-4c0-0.552-0.448-1-1-1s-1 0.448-1 1v4c0 0.552 0.448 1 1 1zM18 12h-10v2h8v4h-8v2h8v4h-8v2h10zM22 26h2v-14h-4v2h2zM27.25 30.75h-22.5c-1.1 0-2-0.65-2-1.75v1c0 1.1 0.9 2 2 2h22.5c1.1 0 2-0.9 2-2v-1c0 1.1-0.9 1.75-2 1.75z" fill="#FFFFFF"></path>
			</svg><h2 class="color-white">Attendance Chart</h2>
			<ul class="clean-list color-white">
				<% @attendances.each do |attendance| %>
				<li><%= attendance[0] %><strong class="fr"><%= attendance[1] %></strong></li>
				<% end %>
			</ul>
			<% if @attendances.present? != false %>
			<a href=""><div class="read-more color-white">Read more</div></a>
			<% else %>
			<p class="color-white">No attendance records</p>
			<% end %>
		</div>
	</div>
	<div>
		<div class="title">Departments</div>
		<div class="content pad10">
			<ul class="accord-style">
				<% @departments.each do |department| %>
				<li <%= instancevars(department.name).present? ? "data-accord=#{nameslug(department.name)}":'' %>>
					<%= link_to "#{department.name}", department_cat_path(department.name.downcase.gsub(' ','-')) %>
				</li>
					<% if(instancevars(department.name).present?) %>
					<ul id="<%= nameslug(department.name) %>">
						<% instancevars(department.name).split(',').each do |child| %>
						<li>
						<%= link_to "#{child}", department_cat_path(department.name.downcase.gsub(' ','-') +'/'+ child.downcase.gsub(' ','-')) %>
						</li>
						<% end %>
					</ul>
					<% end %>
				<% end %>
			</ul>
		</div>
		<!-- Announcements -->
		<div class="topmag10 background-deep-purple pad20 color-white">
			<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="40" height="40" viewBox="0 0 32 32">
			<path d="M12 16c0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.209-1.791 4-4 4s-4-1.791-4-4zM20.761 7.204c3.12 1.692 5.239 4.997 5.239 8.796s-2.119 7.104-5.239 8.796c1.377-2.191 2.239-5.321 2.239-8.796s-0.862-6.605-2.239-8.796zM9 16c0 3.475 0.862 6.605 2.239 8.796-3.12-1.692-5.239-4.997-5.239-8.796s2.119-7.104 5.239-8.796c-1.377 2.191-2.239 5.321-2.239 8.796zM3 16c0 5.372 1.7 10.193 4.395 13.491-4.447-2.842-7.395-7.822-7.395-13.491s2.948-10.649 7.395-13.491c-2.695 3.298-4.395 8.119-4.395 13.491zM24.605 2.509c4.447 2.842 7.395 7.822 7.395 13.491s-2.948 10.649-7.395 13.491c2.695-3.298 4.395-8.119 4.395-13.491s-1.7-10.193-4.395-13.491z" fill="#FFFFFF"></path>
			</svg><h2>Announcements</h2>
			<p>Broadcast an announcement</p>
			<%= form_for @announcement, remote: true, class: 'fancy-form' do |f| %>
				<%= f.text_area :message, placeholder: 'A brief message to everyone...', id: 'status', maxlength: '50' %>
				<%= f.submit :Broadcast %>
				<span id="text_counter" class="fr"></span>
			<% end %>
		</div>

	</div>
</section>